<rss version="2.0">
   <channel>
      <title><%= $settings.name %></title>
      <link><%= host %></link>
      <description><%= $settings.title %></description>
      <lastBuildDate><%= @posts.first.date.rfc822 %></lastBuildDate>
      <generator>Wind [<%= wind_link %>]</generator>
      <% @posts.each do |post| %>
          <item>
             <title><%= post.title %></title>
             <link><%= "#{host}/#{post.link}" %></link>
             <description><%= textile post.text %></description>
             <pubDate><%= post.date.rfc822 %></pubDate>
             <guid><%= post.date.rfc822 %></guid>
          </item>
      <% end %>
   </channel>
</rss>