<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title><%= BLOG[:name] %> &#8212; <%= BLOG[:title] %></title>
        <link rel="stylesheet" href="/stylesheet/style.css" type="text/css" media="screen" />
    </head>
    <body>
        <section id="content">
            <header>
                <h1><a href="/"><%= BLOG[:name] %></a></h1>
                <h2><%= BLOG[:title] %></h2>
            </header>
            <%= styled_flash %>
            <section id="main">
                <%= yield %>
            </section>
            <nav>
                <%= partial :meta %>
            </nav>
            <footer>
                &copy;<%= today.year %> <%= BLOG[:name] %>
                <% unless logged? %>
                    &#8212; <a href="/login">login</a>
                <% end %>
            </footer>
        </section>
    </body>
</html>