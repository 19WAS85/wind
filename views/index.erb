<% @posts.each do |post| %>
    <article>
        <section class="text">
            <header>
                <h1><%= post.title %><%= edit_link 'post', post.id %></h1>
                <time datetime="<%= post.date.iso8601 %>"><%= date post.date %></time>
            </header>
            <%= textile post.text %>
        </section>
    </article>
<% end %>