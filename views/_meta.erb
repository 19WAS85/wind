<% if logged? %>
    <section class="admin">
        <nav>
            <h1>Admin</h1>
            <ul>
                <li><a href="/post/new">New post</a></li>
                <li><a href="/widget/new">New widget</a></li>
                <li><a href="/settings">Blog settings</a></li>
            </ul>
        </nav>
    </section>
<% end %>
<section id="feed">
    <ul>
        <li><a href="<%= feed_url %>">Feed</a></li>
    </ul>
</section>
<section id="search">
    <form action="/search" method="get" accept-charset="utf-8">
        <input type="search" name="q" placeholder="Search" value="<%= params[:q] %>" />
    </form>
</section>
<section id="widgets">
    <% @widgets.each do |widget| %>
        <div class="widget">
            <h1><%= widget.title %><%= edit_link 'widget', widget.id %></h1>
            <div class="content">
                <%= widget.content %>
            </div>
        </div>
    <% end %>
</section>
<section id="login">
    <ul>
        <% if logged? %>
            <li><a href="/logout">Logout</a></li>
        <% else %>
            <li><a href="/login">Login</a></li>
        <% end %>
    </ul>
</section>